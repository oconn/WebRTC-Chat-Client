extends layout

block content
  div#title-area
    h1.title WebRTC Chat Client
  
  div.row
    div(class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3")
      form(class="loginForm" role="form")
        div.form-group
          input(type="text" id="userName" class="form-control" placeholder="Your nick name")
        div.form-group
          input(type="submit" class="form-control" value="ENTER")

  div(class="row" id="main-window")
    div(class="col-xs-12 col-md-10" id="chat-window")
      div(class="col-xs-12" id="video-display") 
        h2 Video Area 

      div(class="col-xs-12" id="chat-display")
        div(id="chat-window")
          div(id="messages")
            
          form(class="textForm" role="form")
            div(class="form-group col-xs-11")
              input(type="text" id="message" class="form-control" placeholder="Message")
            div(class="form-group col-xs-1")
              input(type="submit" class="btn" value="Submit")

    div(class="col-xs-12 col-md-2")
      h2 Chatters
      div(id="chat-list")
        ul